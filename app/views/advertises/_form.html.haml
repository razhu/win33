              -#  %li
              -#    %a{:href => "#"} Cochabamba
          .col-md-6
            .btn-group
              %a.btn.btn-default{:href => "#"} Area
              %a.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#"}
                %span.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#"} La Paz
                %li
                  %a{:href => "#"} Cochabamba
        = f.input :title, label: 'Titulo de la publicacion'
        = f.input :description, label: 'Descripci贸n'
        = f.input :direction, label: 'Direcci贸n'
